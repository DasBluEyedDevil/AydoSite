# Basic rewrite setup - absolute minimum
RewriteEngine On

# Direct proxy approach (no conditional checks)
RewriteRule ^api/(.*)$ http://localhost:8080/api/$1 [P,L]

# Error pages
ErrorDocument 500 /503.html
ErrorDocument 502 /503.html
ErrorDocument 503 /503.html
ErrorDocument 504 /503.html

# Basic file protection
<Files ".htaccess">
    Order deny,allow
    Deny from all
</Files>